{
  "name": "crossfit-tracker",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "node scripts/validate-build-env.js && next build",
    "build:no-validation": "next build",
    "start": "next start",
    "lint": "next lint --fix",
    "lint:check": "next lint",
    "type-check": "tsc --noEmit",
    "test": "jest --passWithNoTests",
    "test:ci": "jest --ci --coverage --passWithNoTests",
    "test:ci:deploy": "jest --ci --passWithNoTests --testPathIgnorePatterns='__tests__/manual/' --testPathIgnorePatterns='__tests__/components/RecordsList.test.tsx' --testPathIgnorePatterns='__tests__/services/workoutRecords.integration.test.ts'",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "cypress run",
    "test:e2e:open": "cypress open",
    "analyze": "ANALYZE=true npm run build:no-validation",
    "build:analyze": "npm run analyze",
    "build:production": "NODE_ENV=production npm run build",
    "build:verify": "npm run build && echo 'âœ… Build completed successfully'",
    "build:analyze-size": "npm run build:no-validation && npx next-bundle-analyzer",
    "build:validate-env": "node scripts/validate-build-env.js",
    "performance:audit": "npm run build:no-validation && npx lighthouse http://localhost:3000 --output=html --output-path=./lighthouse-report.html",
    "pre-deploy:check": "node scripts/pre-deploy-check.js",
    "pre-deploy:env": "node scripts/verify-env.js",
    "pre-deploy:full": "npm run pre-deploy:check",
    "test:supabase": "node scripts/test-supabase-connection.js",
    "deploy:check": "npm run pre-deploy:env && npm run type-check && npm run lint:check && npm run test:ci:deploy && npm run build:verify",
    "deploy:vercel": "npm run deploy:check && vercel --prod",
    "deploy:preview": "npm run deploy:check && vercel",
    "verify:production": "node scripts/post-deploy-verify.js",
    "verify:production:full": "node scripts/verify-production.js",
    "validate:vercel": "node scripts/validate-vercel-config.js",
    "validate:vercel-performance": "node scripts/vercel-performance-config.js"
  },
  "dependencies": {
    "@supabase/ssr": "^0.1.0",
    "@supabase/supabase-js": "^2.39.0",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10.0.1",
    "next": "14.2.30",
    "next-pwa": "^5.6.0",
    "postcss": "^8",
    "react": "^18",
    "react-dom": "^18",
    "tailwindcss": "^3.3.0",
    "typescript": "^5"
  },
  "devDependencies": {
    "@cypress/code-coverage": "^3.14.5",
    "@next/bundle-analyzer": "^15.4.5",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.5",
    "cypress": "^14.5.3",
    "eslint": "^8",
    "eslint-config-next": "14.2.30",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "wait-on": "^8.0.4"
  }
}
