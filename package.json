{
  "name": "crossfit-tracker",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "cypress run",
    "test:e2e:open": "cypress open",
    "analyze": "ANALYZE=true npm run build",
    "build:analyze": "npm run analyze",
    "build:production": "NODE_ENV=production npm run build",
    "performance:audit": "npm run build && npx lighthouse http://localhost:3000 --output=html --output-path=./lighthouse-report.html",
    "deploy:check": "npm run type-check && npm run lint && npm run test && npm run build",
    "deploy:vercel": "vercel --prod",
    "deploy:preview": "vercel",
    "verify:production": "node scripts/verify-production.js"
  },
  "dependencies": {
    "@supabase/ssr": "^0.1.0",
    "@supabase/supabase-js": "^2.39.0",
    "next": "14.2.30",
    "next-pwa": "^5.6.0",
    "react": "^18",
    "react-dom": "^18"
  },
  "devDependencies": {
    "@cypress/code-coverage": "^3.14.5",
    "@next/bundle-analyzer": "^15.4.5",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.5",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10.0.1",
    "cypress": "^14.5.3",
    "eslint": "^8",
    "eslint-config-next": "14.2.30",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8",
    "tailwindcss": "^3.3.0",
    "typescript": "^5",
    "wait-on": "^8.0.4"
  }
}
